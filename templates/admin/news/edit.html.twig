{% extends 'admin/layouts/base.html.twig' %}
{% block content %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    {{ form_start(form,{'attr':{'encrypt':'multipart/form-data','method':'post','action':path('admin_news_update',{'id':news.id})}}) }}

    {{ include('admin/news/partials/form.html.twig') }}

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="upload-image" class="control-label ml-3">Upload image</label>
                <div class="col" id="upload-image">
                    <div class="image-actions" id="imagable">


                        <div class="position-absolute w-100 d-flex justify-content-end">
                            <a class="btn btn-sm btn-danger" data-img-delete data-name="upload-image" data-id="" data-edit-id="">
                                X
                            </a>
                        </div>

                        <img width="150" id="upload-image" src="{{ asset(old_image) }}" alt="">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            {{ form_row(form.image,{'attr':{'class':'form-control','autocomplete':'off','cols':'30','rows':'10'}}) }}
        </div>
    </div>
    <div class="text-right">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <button class="btn btn-wide btn-danger" type="submit" name="saveClose">Сохранить и закрыть</button>
    </div>
    {{ form_end(form) }}

{% endblock %}